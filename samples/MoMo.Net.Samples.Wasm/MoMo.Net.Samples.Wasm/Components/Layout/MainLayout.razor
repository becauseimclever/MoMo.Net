@inherits LayoutComponentBase
@using MoMo.Net.Blazor.Components.Layout

<MoMoShell Position="MenuBarPosition.Top">
    <MenuBarContent>
        <div style="display: flex; align-items: center; justify-content: space-between; width: 100%; padding: 0 1rem;">
            <h1 style="margin: 0; font-size: 1.2rem;">MoMo.Net Demo - WebAssembly</h1>
            <NavMenu />
        </div>
    </MenuBarContent>
    <ChildContent>
        @Body
    </ChildContent>
</MoMoShell>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
